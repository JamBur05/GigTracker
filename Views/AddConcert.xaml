<UserControl x:Class="GigTracker.Views.AddConcert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GigTracker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="LightSlateGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="txtBandName" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Band name" VerticalAlignment="Top" Width="257" Margin="0,100,0,0"/>
        <TextBox Grid.Row="1" x:Name="txtVenueName" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Venue name" VerticalAlignment="Top" Width="257" Margin="0,30,0,0"/>
        <DatePicker Grid.Row="2" x:Name="txtDate" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <Button Grid.Row="3" Content="Add Concert" HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="0,80,0,0"
                Command="{Binding AddConcertCommand}"/>
    </Grid>
</UserControl>
